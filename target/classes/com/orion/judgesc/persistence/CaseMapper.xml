<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.orion.judgesc.persistence.CaseMapper">
	<resultMap type="com.orion.judgesc.domain.Case" id="Case">
        <id column="id" property="id"  />
        <result property="number" column="number"/>
        <result property="type" column="type"/>
        <result property="category" column="category"/>
        <result property="filedDate" column="filed_date"/>
        <result property="title" column="title"/>
        <result property="sourceKey" column="source_key"/>
    </resultMap>

    <select id="getCase" parameterType="map" resultMap="Case">
		select * from cases where source_key=#{sourceKey} 
	</select>
	<select id="getSpecialCases" parameterType="map" resultMap="Case">
		select * from cases where source_key != 0 order by filed_date DESC
	</select>
    <select id="getCaseByNumber" parameterType="map" resultMap="Case">
		select * from cases where number=#{number} 
	</select>

    <select id="getAllCases" parameterType="map" resultMap="Case">
		select * from cases 
	</select>
    
    <insert id="addCase" parameterType="Case" useGeneratedKeys="true">
	  <selectKey order="AFTER" keyProperty="id" resultType="int">
	    SELECT currval('cases_id_seq')
	  </selectKey>
	  insert into cases (number, type, category, filed_date, title,source_key)
	  values (#{number}, #{type}, #{category}, #{filedDate}, #{title}, #{sourceKey})
	</insert>
</mapper>
