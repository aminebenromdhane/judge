<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.orion.judgesc.persistence.EventMapper">
	<resultMap type="com.orion.judgesc.domain.Event" id="Event">
        <id column="id" property="id"  />
        <result property="date" column="date"/>
        <result property="time" column="time"/>
        <result property="type" column="type"/>
        <result property="department" column="department"/>
        <result property="status" column="status"/>
        <result property="caseId" column="case_id"/>
    </resultMap>
    
    <insert id="addEvent" parameterType="Event" useGeneratedKeys="true">
	  <selectKey order="AFTER" keyProperty="id" resultType="int">
	    SELECT currval('events_id_seq')
	  </selectKey>
	  insert into events (date,time,type,department,status,case_id)
	  values (#{date}, #{time}, #{type}, #{department}, #{status}, #{caseId})
	</insert>
</mapper>
